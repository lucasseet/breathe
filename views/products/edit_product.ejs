<%- include('../partials/head') %>

<div id="white-bg" class="body-container">
    
    <!-- Edit To Do -->
    <div id="todo-title-container">
        <div class="row">
            <h2 class="font edit-title">Edit Product</h2>
        </div>
    </div>


    <!-- Edit form -->
    
    <div class="at-form-container">
        <form method="POST" action="/products/<%= product.slug %>?_method=PATCH">
            <div class="mb-3 font-form">
                <label for="image" class="form-label">Image</label>
                <input type="text" class="form-control" name="image" value="<%= product.image %>">
            </div>
            
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>">
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="text" class="form-control" id="price" name="price" value="<%= product.price %>">
            </div>

        
            <button type="submit" class="btn btn-primary register-btn">Update Product</button>
        </form>
    </div>


    <!-- Contact section -->
    <div class="contact-container container-fluid">
        <div class="row contact-group">
            <div class="col-7">
            <h3 id="contact-text">Relaxation made simple, Reach Us!</h3>
            </div>
            <div class="col-5">
            <a href="/" class=" button-contact btn btn-primary">Contact Us</a>
            </div>
        </div>
    </div>

</div>

<%- include('../partials/foot') %>
